<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StyleAndValidation.Views.LoadingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:StyleAndValidation.ViewModels"
    Title="LoadingPage"
    x:DataType="viewmodels:LoadingPageViewModel"
    Shell.PresentationMode="ModalAnimated">
    <VerticalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <ActivityIndicator IsRunning="{Binding IsRunning}" />

        <Label
            HorizontalOptions="Center"
            Text="{Binding Message}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>